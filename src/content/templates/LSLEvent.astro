<FileTree>
	<ul>
		<li>{name}
			{args && <ul>{args.map(({ name, type, description }) => (
				<li>{name} {type} {description && ' â€” ' + description}</li>
			))}
			</ul>}
		</li>
	</ul>
</FileTree>

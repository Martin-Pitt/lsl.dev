---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { LinkCard } from '@astrojs/starlight/components';

const pages = await Astro.glob('../content/docs/functions/*');
---

<StarlightPage frontmatter={{ title: 'LSL Functions' }}>
	{pages.map(page =>
		<LinkCard
			title={page.frontmatter.title}
			href={page.frontmatter.slug || page.url}
		/>
	)}
</StarlightPage>
